<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    <RelativeLayout-->
<!--        android:id="@+id/rl_header"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

        <RelativeLayout
            android:id="@+id/iv_login_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_login_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login_now"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/iv_login_head"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:id="@+id/rl_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGrey">

                <EditText
                    android:id="@+id/et_login_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:backgroundTint="@null"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl_email"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"/>

            <RelativeLayout
                android:id="@+id/rl_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGrey">

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="5dp"
                    android:backgroundTint="@null"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@color/colorBlack">

                <TextView
                    android:id="@+id/tv_login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"
                    android:paddingBottom="8dp"
                    android:layout_centerInParent="true"
                    android:text="Login" />

            </RelativeLayout>

        </LinearLayout>

<!--    </RelativeLayout>-->

</LinearLayout>